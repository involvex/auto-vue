{
  "extends": "./tsconfig.json",
  "include": ["index.ts", "utils/**/*", "__test__/**/*", "eslint.config.js"],
  "exclude": [
    "node_modules",
    "bin",
    "bundle.js",
    "playground/**/*",
    "template/**/*",
    "scripts/**/*",
    "docs/**/*",
    ".github/**/*"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
